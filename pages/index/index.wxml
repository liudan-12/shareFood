<view>
  <view class="page-swiper">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{background}}" wx:key="this" wx:for-index="idx" wx:for-item="item">
        <swiper-item>
          <image class="swiper-image" src="{{item.imgUrl}}"></image>
          <!-- <view class="swiper-item {{item}}"></view> -->
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view wx:for="{{foodList}}" wx:key="_id" bindtap="goTopics" class="food-list" data-item="{{item}}" wx:for-index="bindex" data-bindex='{{bindex}}'>
    <view class="food-sharetit">
      <text>标题：</text>
      {{item.shareTit}}
    </view>
    <view class="food-sharepage">
      <text>分享故事：</text>
      {{item.shaerPage}}
    </view>
    <image class="food-fileimg" src="{{item.fileImg}}"></image>
  </view>
</view>