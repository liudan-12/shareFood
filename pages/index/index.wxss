view {
  box-sizing: border-box;
}

.page-swiper {
  width: 100%;
  height: auto;
  background-color: red;

}

.swiper-image {
  width: 100%;
  height: 100%;
}
/* 循环列表 */
.food-list {
  border: 1px solid black;
  margin: 30px 0;
  border-radius: 4%;
}

text {
  font-weight: bold;
}

.food-sharetit {
  display: flex;
  justify-content: center;
  margin: 10px 0;
  font-size: 18px;
  font-weight: bold;
}

.food-sharepage {
  /* 文字自动换行 */
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-line;
  border-style: solid none solid none;
  border-width: 1px;
  padding: 10px 0;
}